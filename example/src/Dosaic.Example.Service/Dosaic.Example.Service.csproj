    <ProjectReference Include="..\..\..\Plugins\Jobs\Hangfire\src\Dosaic.Plugins.Jobs.Hangfire\Dosaic.Plugins.Jobs.Hangfire.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.ip-rate-limiting.json">
